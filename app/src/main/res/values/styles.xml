<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item> <!-- adjust to your liking -->
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>